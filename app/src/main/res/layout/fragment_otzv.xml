<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout7"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context=".ui.home.skitka.OtzvFragment">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_marginLeft="8dp"
        android:background="#fff"
        android:orientation="vertical"
        android:padding="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeWidth="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="8dp"
            android:paddingTop="16dp"
            android:paddingRight="8dp"
            android:paddingBottom="16dp">

            <LinearLayout
                android:id="@+id/ll_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Макарова Алина"
                    android:textColor="@color/main_blue"
                    android:textSize="16sp" />

                <RatingBar
                    android:id="@+id/ratingBar1"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:progressTint="#FFBB3C"
                    android:rating="4"
                    android:secondaryProgressTint="#FFBB3C"
                    android:stepSize="0.25" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text="Очень хорошее платье, удобное, приятный
материал. Советую!"
                android:textColor="@color/main_blue"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_marginStart="8dp"
        android:background="#fff"
        android:orientation="vertical"
        android:padding="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeWidth="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="8dp"
            android:paddingTop="16dp"
            android:paddingRight="8dp"
            android:paddingBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Губкина Валентина"
                    android:textColor="@color/main_blue"
                    android:textSize="16sp" />

                <RatingBar
                    android:id="@+id/ratingBar2"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:progressTint="#FFBB3C"
                    android:rating="4"
                    android:secondaryProgressTint="#FFBB3C"
                    android:stepSize="0.25" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text="Платье красивое, но село после первой
стирки :("
                android:textColor="@color/main_blue"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#5CC0C0C0"
        android:padding="8dp"
        app:layout_constraintBottom_toTopOf="@+id/nestedScrollView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="8dp"
        android:layout_marginStart="8dp"
        android:background="#385AA5"
        android:padding="8dp"
        app:cardCornerRadius="10dp"

        app:strokeWidth="2dp">

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@null"
            android:hint="Оставьте ваш отзыв"
            android:inputType="textMultiLine|textLongMessage"
            android:padding="5dp"
            android:scrollX="@dimen/activity_vertical_margin"
            android:scrollbars="vertical"
            android:singleLine="false"
            android:textColor="@color/main_blue" />

    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:id="@+id/ll_top3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_marginStart="8dp"
        android:padding="8dp">


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ваша оценка"
            android:textColor="@color/main_blue"
            android:textSize="18sp"
            android:textStyle="bold" />


        <!--        <RatingBar-->
        <!--            android:id="@+id/ratingBar3"-->
        <!--            style="?android:attr/ratingBarStyleSmall"-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:numStars="5"-->
        <!--            android:progressTint="#FFBB3C"-->
        <!--            android:rating="4"-->
        <!--            android:secondaryProgressTint="#FFBB3C"-->
        <!--            android:stepSize="0.25" -->
        <!--            />-->

        <RatingBar
            android:id="@+id/ratingBar3"
            style="@style/CustomRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:stepSize="1.0"
            />

        <!--        <RatingBar-->
        <!--            android:id="@+id/ratingBar3"-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="21dp"-->
        <!--            android:numStars="5"-->
        <!--            style="@style/CustomRatingBar"-->
        <!--            android:progressDrawable="@drawable/custom_ratingbar_selector"-->
        <!--            android:rating="3.0"-->
        <!--            android:stepSize="1" />-->


    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/ic_button"
        android:gravity="center"
        android:padding="8dp"
        android:text="Добавить отзыв"
        android:textStyle="bold" />

</LinearLayout>