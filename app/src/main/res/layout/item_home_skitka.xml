<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#fff">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#F5F5F9"
            app:cardCornerRadius="20dp"
            app:strokeColor="#F5F5F9"
            app:strokeWidth="1dp">

            <ImageView
                android:id="@+id/imageDress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/image_2" />

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/textNarx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/nunito_extralight"
            android:text="228 000 сум" />

        <RatingBar
            android:id="@+id/ratingBar1"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:isIndicator="false"
            android:rating="3.5"
            android:transformPivotX="0dp"
            android:stepSize="0.5"
            android:theme="@style/RatingBar" />


        <TextView
            android:id="@+id/textDress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/nunito_extralight"
            android:text="@string/dress_name"
            android:textColor="#262C6C"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/textShopDrawer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/nunito_extralight"
            android:text="Kids World Shop"
            android:textColor="#9295B5" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>